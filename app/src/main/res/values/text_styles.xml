<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="MyText.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyText.Primary">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="MyText.Secondary">
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="MyText.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="MyText.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="MyText.Black">
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="MyText.Bold.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyText.Medium.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyText.Black.Black">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>