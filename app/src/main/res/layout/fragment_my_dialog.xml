<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/bg_rounded_white_4"
    tools:context="id.go.ngawikab.siketan.utils.components.MyDialogFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgHeader"
        android:layout_width="@dimen/dimen_90dp"
        android:layout_height="@dimen/dimen_90dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_oval_white"
        android:elevation="@dimen/dimen_3dp"
        android:padding="@dimen/dimen_20dp"
        tools:src="@drawable/img_about" />

    <TextView
        android:id="@+id/tvContent"
        style="@style/MyText.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_32dp"
        android:layout_marginTop="@dimen/dimen_26dp"
        android:gravity="center"
        android:textSize="@dimen/text_size_18sp"
        tools:text="@string/message_about" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cornerRadius="@dimen/dimen_12dp"
        tools:text="CLOSE"
        android:layout_marginVertical="@dimen/dimen_30dp"
        android:paddingHorizontal="@dimen/dimen_40dp"
        android:backgroundTint="@color/pink" />
</LinearLayout>