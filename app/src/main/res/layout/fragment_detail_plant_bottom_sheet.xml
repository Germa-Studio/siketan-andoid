<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp"
    tools:context=".presentation.report.dialog.DetailPlantBottomSheetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            style="@style/MyText.Medium"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_16sp"
            tools:text="Manggis" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_close_24"
            app:tint="@color/darkgreen" />
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginVertical="@dimen/dimen_16dp"
        app:dividerColor="@color/colorGrey" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_kategori"
                style="@style/MyText"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="@dimen/text_size_14sp"
                tools:text=" : Tanaman Pangan" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/dimen_4dp">

            <TextView
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Tanaman"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_jenis_tanaman"
                style="@style/MyText"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="@dimen/text_size_14sp"
                tools:text=" : Buah" />
        </TableRow>


        <TableRow android:layout_marginTop="@dimen/dimen_4dp">

            <TextView
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Lahan"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_status_lahan"
                style="@style/MyText"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="@dimen/text_size_14sp"
                tools:text=" : Sewa" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/dimen_4dp">

            <TextView
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luas Lahan"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_luas_lahan"
                style="@style/MyText"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="@dimen/text_size_14sp"
                tools:text=" : 100 M2" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/dimen_4dp">

            <TextView
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Panen"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_jenis_panen"
                style="@style/MyText"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="@dimen/text_size_14sp"
                tools:text=" : Tahunan" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/dimen_4dp">

            <TextView
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Musim Tanam"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_musim_tanam"
                style="@style/MyText"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="@dimen/text_size_14sp"
                tools:text=" : 1" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/dimen_4dp">

            <TextView
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Tanam"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_tanggal_tanam"
                style="@style/MyText"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="@dimen/text_size_14sp"
                tools:text=" : 2023-08-01" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/dimen_4dp">

            <TextView
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perkiraan Tanggal Panen"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_prakiraan_panen"
                style="@style/MyText"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="@dimen/text_size_14sp"
                tools:text=" : 2023-10-20" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/dimen_4dp">

            <TextView
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perkiraan Hasil Panen"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_prakiraan_hasil_panen"
                style="@style/MyText"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="@dimen/text_size_14sp"
                tools:text=" : 100" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/dimen_4dp">

            <TextView
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Realisasi Hasil Panen"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_realisasi_hasil_panen"
                style="@style/MyText"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="@dimen/text_size_14sp"
                tools:text=" : " />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_report"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_weight="1"
            android:backgroundTint="@color/secondary"
            android:text="Buat Laporan"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp"
            app:cornerRadius="@dimen/dimen_6dp" />

        <Space
            android:layout_width="@dimen/dimen_8dp"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_weight="1"
            android:backgroundTint="@color/primary"
            android:text="Lihat Laporan"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp"
            app:cornerRadius="@dimen/dimen_6dp" />
    </LinearLayout>

</LinearLayout>