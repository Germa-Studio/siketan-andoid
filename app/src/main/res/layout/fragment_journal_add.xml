<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".presentation.journal.JournalAddFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-10dp"
        android:layout_marginEnd="-10dp"
        android:background="@drawable/img_app_bar"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:src="@drawable/ic_back" />

        <TextView
            style="@style/MyText.Bold"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Input Jurnal Penyeluhan"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="18dp"
            android:src="@drawable/img_statistics_white" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.wahidabd.siketan.utils.components.FormInput
                android:id="@+id/tilNip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                app:labelHint="Nomor Nip" />

            <com.wahidabd.siketan.utils.components.FormInput
                android:id="@+id/tilName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                app:labelHint="Nama Penyuluh" />

            <com.wahidabd.siketan.utils.components.FormInput
                android:id="@+id/tilRegion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                app:labelHint="Kecamatan" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginVertical="@dimen/dimen_20dp"
                android:layout_marginHorizontal="@dimen/dimen_12dp">

                <View
                    android:layout_width="@dimen/dimen_58dp"
                    android:layout_height="@dimen/dimen_3dp"
                    android:background="@drawable/bg_stroke_dash"/>

                <TextView
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/dimen_10dp"
                    style="@style/MyText"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12sp"
                    android:text="Masukan Laporan Jurnal Kegiatan"/>

                <View
                    android:layout_width="@dimen/dimen_58dp"
                    android:layout_height="@dimen/dimen_3dp"
                    android:background="@drawable/bg_stroke_dash"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_rounded_white_10"
                android:elevation="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvDate"
                    style="@style/MyText.Medium"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="@dimen/dimen_10dp"
                    android:layout_weight="1"
                    android:hint="Tanggal"
                    android:textColor="@color/blackOpacity48" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_arrow_down" />
            </LinearLayout>

            <com.wahidabd.siketan.utils.components.FormInput
                android:id="@+id/tilJournal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                app:labelHint="Judul Jurnal" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDesc"
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="@dimen/dimen_12dp"
                android:hint="Deskripsi Tanam">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:gravity="top|start"
                    android:minHeight="@dimen/dimen_100dp"
                    android:maxHeight="@dimen/dimen_120dp"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="28dp"
                android:layout_marginHorizontal="@dimen/dimen_12dp">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cornerRadius="@dimen/dimen_8dp"
                    app:iconGravity="textStart"
                    android:text="Cancel"
                    app:icon="@drawable/ic_save"
                    android:backgroundTint="@color/colorRed"/>

                <Space
                    android:layout_width="@dimen/dimen_44dp"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cornerRadius="@dimen/dimen_8dp"
                    app:iconGravity="textStart"
                    android:text="Simpan"
                    app:icon="@drawable/ic_save"
                    android:backgroundTint="@color/secondary"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>