<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".presentation.store.StoreAddFragment">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-10dp"
        android:layout_marginEnd="-10dp"
        android:background="@drawable/img_app_bar"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:src="@drawable/ic_back" />

        <TextView
            style="@style/MyText.Bold"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Toko Petani Ngawi"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="18dp"
            android:src="@drawable/img_statistics_white" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llTop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.wahidabd.siketan.utils.components.FormInput
                android:id="@+id/tilNik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                app:isActive="false"
                app:labelHint="Nomor Nik" />

            <com.wahidabd.siketan.utils.components.FormInput
                android:id="@+id/tilName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isActive="false"
                android:layout_marginHorizontal="12dp"
                app:labelHint="Nama Petani" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.wahidabd.siketan.utils.components.FormInput
                    android:id="@+id/tilKecamatan"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    app:isActive="false"
                    android:layout_marginHorizontal="12dp"
                    android:layout_weight="1"
                    app:labelHint="Kecamatan" />

                <com.wahidabd.siketan.utils.components.FormInput
                    android:id="@+id/tilDesa"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    app:isActive="false"
                    android:layout_marginHorizontal="12dp"
                    android:layout_weight="1"
                    app:labelHint="Nama Desa" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.wahidabd.siketan.utils.components.FormInput
                    android:id="@+id/tilGapoktan"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_weight="1"
                    app:labelHint="Gapoktan" />

                <com.wahidabd.siketan.utils.components.FormInput
                    android:id="@+id/tilKelompok"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_weight="1"
                    app:labelHint="Nama Kelompok" />
            </LinearLayout>

            <com.wahidabd.siketan.utils.components.FormInput
                android:id="@+id/tilPenyuluh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                app:labelHint="Penyuluh" />

            <com.wahidabd.siketan.utils.components.FormInput
                android:id="@+id/tilProfesi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                app:labelHint="Profesi" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginVertical="@dimen/dimen_20dp"
                android:layout_marginHorizontal="@dimen/dimen_12dp">

                <View
                    android:layout_width="@dimen/dimen_58dp"
                    android:layout_height="@dimen/dimen_3dp"
                    android:background="@drawable/bg_stroke_dash"/>

                <TextView
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/dimen_10dp"
                    style="@style/MyText"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12sp"
                    android:text="Masukan Data Produk Toko Pertanian Daerah"/>

                <View
                    android:layout_width="@dimen/dimen_58dp"
                    android:layout_height="@dimen/dimen_3dp"
                    android:background="@drawable/bg_stroke_dash"/>
            </LinearLayout>

            <com.wahidabd.siketan.utils.components.FormInput
                android:id="@+id/tilProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                app:labelHint="Nama Produk" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.wahidabd.siketan.utils.components.FormInput
                    android:id="@+id/tilStok"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_12dp"
                    android:layout_weight="1"
                    app:formInputType="number"
                    app:labelHint="Stok" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilAutoComplete"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_marginTop="4dp"
                    android:hint="Satuan"
                    app:endIconDrawable="@drawable/ic_arrow_down"
                    app:endIconTint="@color/primary"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary"
                    android:layout_marginHorizontal="@dimen/dimen_8dp"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/autoComplete"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:inputType="none"
                        android:popupBackground="@color/white"
                        android:textColor="@color/black"
                        android:padding="10dp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.wahidabd.siketan.utils.components.FormInput
                    android:id="@+id/tilPrice"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_12dp"
                    android:layout_weight="1"
                    app:formInputType="number"
                    app:labelHint="Harga" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDesc"
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_12dp"
                android:layout_marginVertical="4dp"
                android:hint="Deskripsi">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:maxHeight="@dimen/dimen_120dp"
                    android:maxLines="1"
                    android:minHeight="@dimen/dimen_100dp"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp">

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_12dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:background="@drawable/bg_rounded_stroke_gray"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dimen_58dp"
                        android:layout_height="@dimen/dimen_58dp"
                        android:layout_margin="@dimen/dimen_20dp"
                        android:elevation="@dimen/dimen_0dp"
                        android:background="@null"
                        app:cardCornerRadius="@dimen/dimen_4dp">

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_image_placeholder"/>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <TextView
                    style="@style/MyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/ll"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/dimen_30dp"
                    android:background="@color/white"
                    android:paddingHorizontal="@dimen/dimen_12dp"
                    android:text="Isikan Foto Produk"
                    android:textColor="@color/primary" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="28dp"
                android:layout_marginHorizontal="@dimen/dimen_12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cornerRadius="@dimen/dimen_8dp"
                    app:iconGravity="textStart"
                    android:text="Cancel"
                    app:icon="@drawable/ic_save"
                    android:backgroundTint="@color/colorRed"/>

                <Space
                    android:layout_width="@dimen/dimen_44dp"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cornerRadius="@dimen/dimen_8dp"
                    app:iconGravity="textStart"
                    android:text="Simpan"
                    app:icon="@drawable/ic_save"
                    android:backgroundTint="@color/secondary"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:indeterminateTint="@color/primary"/>


</RelativeLayout>